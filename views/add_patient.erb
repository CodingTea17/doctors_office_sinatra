<div class="row">
  <div class="col-lg-4">
    <h1>Add Patient: </h1>
    <form action="/new_patient" method="post">
      <input id="doctor_id" name="doctor_id" type="hidden" value="<%= @doctor.id() %>">
      <div class="form-group">
        <label for="name"> Name of Patient:</label>
        <input id="name" name="name" type="text" class="form-control">
      </div>
      <div class="form-group">
        <label for="birthday"> Patients Birthday:</label>
        <input id="birthday" name="birthday" type="date" class="form-control">
      </div>
      <a href="/"><button type="button" class="btn btn-dark">Home</button></a>
      <button type="submit" class="btn btn-info"> Add Patient</button>
    </form>
  </div>
</div>
